{
    "files.autoSave": "afterDelay",
    "json.schemas": [
    
    ],
    // 取消map產出
    "liveSassCompile.settings.generateMap": false,
    "liveSassCompile.settings.autoprefix": [
        "> 1%",
        "last 2 versions"
    ],

    // css產出樣式
    "liveSassCompile.settings.formats":[
        // 預設
        {
            "format": "expanded",
            "extensionName": ".css",
            "savePath": null
        },
        // 新增壓縮的 CSS
        {
            "format": "compressed",
            "extensionName": ".min.css",
            "savePath": null
        }
    ]
}